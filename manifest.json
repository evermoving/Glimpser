{
  "manifest_version": 2,
  "name": "Glimpser: AI-based text Summariser",
  "version": "1.1",
  "description": "Summarises any piece of text in an opened tab",
  "browser_specific_settings": {
    "gecko": {
      "id": "glimpser@example.com"
    }
  },
  "permissions": [
      "activeTab",
      "storage"
  ],
  "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icons/glimpser_16.png",
          "48": "icons/glimpser_48.png",
          "128": "icons/glimpser_128.png"
      }
  },
  "background": {
      "scripts": ["background.js"],
      "persistent": true
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content_script.js", "libs/readability.js"]
      }
  ],
  "icons": {
      "16": "icons/glimpser_16.png",
      "48": "icons/glimpser_48.png",
      "128": "icons/glimpser_128.png"
  },
  "options_ui": {
      "page": "options.html",
      "open_in_tab": true
  }
}